<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>BlueRay-Generator</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/html2canvas@1.4.1/dist/html2canvas.min.js"></script>

  <!-- Google Fonts for crypto vibes -->
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700&family=Inter:wght@400;600&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
    .crypto-font {
      font-family: 'Orbitron', sans-serif;
      letter-spacing: 1px;
    }
    .glow {
      text-shadow: 0 0 10px rgba(0, 255, 180, 0.7), 0 0 20px rgba(0, 255, 180, 0.6);
    }
  </style>
</head>
<body class="bg-gradient-to-b from-black via-zinc-900 to-zinc-800 min-h-screen flex items-center justify-center px-4 py-10">

  <!-- Main container -->
  <div class="flex flex-col items-center space-y-6">

    <!-- Capture area -->
    <div class="relative w-full max-w-4xl rounded-2xl overflow-hidden shadow-2xl" id="blueray">
      <!-- Background Image -->
      <img src="/images/blueray.jpg" alt="Background Image" class="w-full h-auto object-cover" />

      <!-- Overlay content -->
      <div class="absolute inset-0 flex flex-col justify-center px-8 sm:px-12 py-10 bg-black/60 backdrop-blur-md">
        <div class="grid gap-8 text-left">

          <!-- ROI -->
          <div>
            <p class="text-zinc-400 text-lg sm:text-xl font-semibold tracking-wide">ROI</p>
            <h1 class="crypto-font text-5xl sm:text-6xl font-bold glow text-green-400">
              +<%= pnl %>%
            </h1>
          </div>

          <!-- Entry Price -->
          <div>
            <p class="text-zinc-400 text-lg sm:text-xl font-semibold tracking-wide">ENTRY PRICE</p>
            <h2 class="crypto-font text-3xl sm:text-4xl font-semibold text-cyan-300">
              <%= entryprice %>
            </h2>
          </div>

          <!-- Current Price -->
          <div>
            <p class="text-zinc-400 text-lg sm:text-xl font-semibold tracking-wide">CURRENT PRICE</p>
            <h2 class="crypto-font text-3xl sm:text-4xl font-semibold text-purple-300">
              <%= currentPrice %>
            </h2>
          </div>

        </div>
      </div>
    </div>

    <!-- Buttons section below the image -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mt-4">
      <!-- Download Button -->
      <button id="downloadBtn" class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded-lg shadow-md transition duration-300">
        Download Image
      </button>

      <!-- Done Link -->
      <a href="/" class="text-white border border-white px-5 py-2 rounded-lg hover:bg-white hover:text-black transition duration-300 font-medium">
        Done
      </a>
    </div>

  </div>

  <!-- Download Script -->
  <script>
    // ROI dynamic color (green if profit, red if loss)
    document.addEventListener("DOMContentLoaded", () => {
      const roiElement = document.querySelector("#blueray h1");
      const roiValue = parseFloat("<%= pnl %>");
      if (roiValue < 0) {
        roiElement.classList.remove("text-green-400");
        roiElement.classList.add("text-red-500");
        roiElement.classList.remove("glow");
      }
    });

    // Download handler
    document.getElementById("downloadBtn").addEventListener("click", function () {
      const capture = document.getElementById("blueray");
      html2canvas(capture).then((canvas) => {
        const link = document.createElement("a");
        link.download = "blueray-snapshot.png";
        link.href = canvas.toDataURL("image/png");
        link.click();
      });
    });
  </script>

</body>
</html>
