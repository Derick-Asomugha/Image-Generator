<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>PHANE</title>

  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Tailwind Custom Config -->
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            darkGreen: '#0f2f25',
            inputGreen: '#1c3a31',
            lightGreen: '#34d399'
          },
          boxShadow: {
            'glow-green': '0 0 8px 2px rgba(52, 211, 153, 0.7)',
            'glow-green-strong': '0 0 12px 4px rgba(52, 211, 153, 0.9)'
          }
        }
      }
    }
  </script>
</head>

<body class="bg-darkGreen text-white min-h-screen flex items-center justify-center p-6">
  <div class="w-full max-w-xl bg-inputGreen p-8 rounded-lg shadow-lg space-y-6
              shadow-glow-green/40 hover:shadow-glow-green-strong transition-shadow duration-500">
    <h1 class="text-3xl font-bold text-lightGreen text-center">PHANE</h1>

    <!--  Green Loading Bar (initially hidden) -->
    <div id="loadingBar" class="w-full h-2 bg-darkGreen rounded overflow-hidden hidden shadow-inner">
      <div id="barFill" class="h-full bg-lightGreen transition-all duration-100 ease-linear rounded shadow-glow-green" style="width: 0%;"></div>
    </div>

    <!-- ðŸ’¡ GET Form -->
    <form action="/phanes" method="post" id="phaneForm" class="space-y-5">
      <!-- Token Name -->
      <div>
        <label for="tkName" class="block mb-1 font-medium text-lightGreen">Token Name</label>
        <input type="text" name="tkName" id="tkName" required autofocus
               class="w-full p-3 rounded bg-darkGreen text-white border border-lightGreen shadow-glow-green
                      focus:outline-none focus:ring-2 focus:ring-lightGreen focus:shadow-glow-green-strong placeholder:text-gray-400" />
      </div>

      <!-- Market Cap -->
      <div>
        <label for="marketValue" class="block mb-1 font-medium text-lightGreen">Market Cap</label>
        <input type="number" name="marketValue" id="marketValue" required
               class="w-full p-3 rounded bg-darkGreen text-white border border-lightGreen shadow-glow-green
                      focus:outline-none focus:ring-2 focus:ring-lightGreen focus:shadow-glow-green-strong placeholder:text-gray-400" />
      </div>

      <!-- PNL -->
      <div>
        <label for="pnl" class="block mb-1 font-medium text-lightGreen">PNL</label>
        <input type="number" name="pnl" id="pnl" required
               class="w-full p-3 rounded bg-darkGreen text-white border border-lightGreen shadow-glow-green
                      focus:outline-none focus:ring-2 focus:ring-lightGreen focus:shadow-glow-green-strong placeholder:text-gray-400" />
      </div>

      <!-- Your Name -->
      <div>
        <label for="name" class="block mb-1 font-medium text-lightGreen">Your Name</label>
        <input type="text" name="name" id="name" required
               class="w-full p-3 rounded bg-darkGreen text-white border border-lightGreen shadow-glow-green
                      focus:outline-none focus:ring-2 focus:ring-lightGreen focus:shadow-glow-green-strong placeholder:text-gray-400" />
      </div>

      <!-- Duration -->
      <div>
        <label for="duration" class="block mb-1 font-medium text-lightGreen">Duration</label>
        <input type="text" name="duration" id="duration" required placeholder="e.g. 1d 5h"
               class="w-full p-3 rounded bg-darkGreen text-white border border-lightGreen shadow-glow-green
                      focus:outline-none focus:ring-2 focus:ring-lightGreen focus:shadow-glow-green-strong placeholder:text-gray-400" />
      </div>

      <!-- Submit Button -->
      <div>
        <button type="submit"
                class="w-full bg-lightGreen text-darkGreen font-bold py-3 px-4 rounded
                       hover:bg-green-400 transition-colors duration-200
                       shadow-glow-green hover:shadow-glow-green-strong
                       focus:outline-none focus:ring-4 focus:ring-lightGreen focus:ring-opacity-75">
          GENERATE
        </button>
      </div>
    </form>
    <a href="/"
       class="inline-block mt-6 text-lightGreen font-semibold underline
          hover:text-green-400 transition-colors duration-200
          shadow-glow-green hover:shadow-glow-green-strong
          focus:outline-none focus:ring-2 focus:ring-lightGreen focus:ring-opacity-50 rounded px-2 py-1">
          Back
     </a>

  </div>

  
  <script>
    function handleFormSubmit(event) {
      event.preventDefault();

      const bar = document.getElementById('loadingBar');
      const fill = document.getElementById('barFill');
      bar.classList.remove('hidden');
      fill.style.width = '0%';

      let width = 0;
      const interval = setInterval(() => {
        if (width >= 100) {
          clearInterval(interval);

          const form = document.getElementById('phaneForm');
          const formData = new FormData(form);
          const queryString = new URLSearchParams(formData).toString();

          event.target.submit()
        } else {
          width += 1;
          fill.style.width = width + '%';
        }
      }, 100); 
    }

    document.getElementById('phaneForm').addEventListener('submit', handleFormSubmit);
  </script>
</body>
</html>
